<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".list_view_items">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/gambar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="Rumah Kost Umayah"/>

        <TextView
            android:id="@+id/namaKost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Kost Pondok Indah"/>
        <TextView
            android:id="@+id/Alamat_Kost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Jalan Umayah"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Detail"
            android:text="Info"
            android:textColor="@color/colorPrimary"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:onClick="detailKost"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>